{
  "name": "root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "my-website",
    "test-my-website-in-workspace",
    "packages/create-docusaurus/templates/*",
    "admin/new.docusaurus.io"
  ],
  "scripts": {
    "my-install": "cd my-website && ls && rm -rf library && git clone https://markshawn2020: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@github.com/markshawn2020/keeeps-learning.git library && cd - && yarn",
    "build:packages": "lerna run build --no-private",
    "start": "yarn build:packages && yarn start:my-website",
    "start:my-website": "yarn workspace my-website start",
    "start:my-website:baseUrl": "yarn workspace my-website start:baseUrl",
    "start:my-website:blogOnly": "yarn workspace my-website start:blogOnly",
    "start:my-website:deployPreview": "cross-env NETLIFY=true CONTEXT='deploy-preview' yarn workspace my-website start",
    "examples:generate": "node admin/scripts/generateExamples.js",
    "build": "yarn build:packages && yarn build:my-website",
    "build:my-website": "yarn workspace my-website build",
    "build:my-website:baseUrl": "yarn workspace my-website build:baseUrl",
    "build:my-website:blogOnly": "yarn workspace my-website build:blogOnly",
    "build:my-website:deployPreview:testWrap": "yarn workspace my-website test:swizzle:wrap:ts",
    "build:my-website:deployPreview:build": "cross-env NETLIFY=true CONTEXT='deploy-preview' yarn workspace my-website build",
    "build:my-website:deployPreview": "yarn build:my-website:deployPreview:testWrap && yarn build:my-website:deployPreview:build",
    "build:my-website:fast": "yarn workspace my-website build:fast",
    "build:my-website:en": "yarn workspace my-website build --locale en",
    "clear:my-website": "yarn workspace my-website clear",
    "serve:my-website": "yarn workspace my-website serve",
    "serve:my-website:baseUrl": "serve my-website",
    "serve:my-website:ssl": "yarn serve:my-website:ssl:gencert && yarn serve:my-website:ssl:message && yarn serve:my-website:ssl:serve",
    "serve:my-website:ssl:gencert": "openssl req -x509 -nodes -days 365 -newkey rsa:4096 -subj \"/C=US/ST=Docusaurus/L=Anywhere/O=Dis/CN=localhost\" -keyout ./my-website/.docusaurus/selfsigned.key -out ./my-website/.docusaurus/selfsigned.crt",
    "serve:my-website:ssl:message": "echo '\n\n\nServing Docusaurus with HTTPS on localhost requires to disable the Chrome security: chrome://flags/#allow-insecure-localhost\n\n\n'",
    "serve:my-website:ssl:serve": "serve my-website/build --ssl-cert ./my-website/.docusaurus/selfsigned.crt --ssl-key ./my-website/.docusaurus/selfsigned.key",
    "crowdin:upload:my-website": "crowdin upload sources --config ./crowdin-v2.yaml",
    "crowdin:download:my-website": "crowdin download --config ./crowdin-v2.yaml",
    "canary": "yarn canary:bumpVersion && yarn canary:publish",
    "canary:version": "echo 0.0.0-`git rev-list --count HEAD`+`git rev-parse --short HEAD`",
    "canary:bumpVersion": "yarn lerna version `yarn --silent canary:version` --exact --no-push --yes",
    "canary:publish": "yarn lerna publish from-package --dist-tag canary --yes --no-verify-access",
    "changelog": "lerna-changelog",
    "postinstall": "yarn lock:update && yarn build:packages",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:diff": "prettier --list-different .",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:spelling",
    "lint:ci": "yarn lint:js --quiet && yarn lint:style && yarn lint:spelling",
    "lint:js": "eslint --cache --report-unused-disable-directives \"**/*.{js,jsx,ts,tsx,mjs}\"",
    "lint:spelling": "cspell \"**\" --no-progress",
    "lint:style": "stylelint \"**/*.css\"",
    "lerna": "lerna",
    "test": "jest",
    "test:build:my-website": "./admin/scripts/test-release.sh",
    "watch": "yarn lerna run --parallel watch",
    "clear": "(yarn workspace my-website clear || echo 'Failure while running docusaurus clear') && yarn lerna exec --ignore docusaurus yarn rimraf lib",
    "test:baseUrl": "yarn build:my-website:baseUrl && yarn serve:my-website:baseUrl",
    "lock:update": "npx --yes yarn-deduplicate",
    "run-lint-staged": "yarn  lint-staged"
  },
  "dependencies": {
    "unified": "^9.2.2"
  },
  "devDependencies": {
    "@crowdin/cli": "^3.7.9",
    "@swc/core": "1.2.197",
    "@swc/jest": "^0.2.22",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.6",
    "@types/prompts": "^2.0.14",
    "@types/react": "^18.0.15",
    "@types/react-dev-utils": "^9.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/semver": "^7.3.10",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "cross-env": "^7.0.3",
    "cspell": "^6.4.1",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.7.0",
    "husky": "^8.0.1",
    "image-size": "^1.0.2",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-serializer-ansi-escapes": "^2.0.1",
    "jest-serializer-react-helmet-async": "^1.0.21",
    "lerna": "^5.2.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.3.0",
    "react-test-renderer": "^17.0.2",
    "remark-parse": "^8.0.2",
    "rimraf": "^3.0.2",
    "sharp": "^0.30.7",
    "strip-ansi": "^6.0.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "typescript": "~4.7.4"
  }
}
